<%= render partial: 'shared/profile' %>
<div class="container">
  <div class="row">
    <% @replies.each do |reply| %>
      <div class="col-12 col-md-7 offset-md-2">
        <h5 class="font-weight-bold p-1">
          <%= reply.post.title %>
        </h5>
        <div id="<%= reply.id %>">
          <div class="card">
            <div class="card-body p-5">
              <p><%= reply.comment%></p>
            </div>
          </div>
          <% if reply.user == current_user %>
            <%= link_to post_reply_path(reply.post, reply), method: :delete, data: { confirm: "Are you sure?" } do %>
              <h3 class="text-danger float-right p-1"><%= fas_icon 'fas fa-trash-alt' %></h3>
            <% end %>
            <%= link_to edit_post_reply_path(reply.post, reply),remote: true do %>
              <h3 class="text-dark float-right  p-1"><%= fas_icon 'fas fa-edit' %></h3>
            <% end %>
          <% end %>
        </div>
      </div>   
    <% end %>
  </div>
</div>

