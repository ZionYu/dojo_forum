<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4"><br><br>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %> <br>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %> <br>
        </div>
        <div class="form-group">
          <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-outline-success btn-lg" %>
          <%= f.submit "Log In", class: "btn btn-outline-success btn-lg float-right" %>  
        </div>  
      <% end %>
    </div>
  </div>
</div>