<div class="card">
  <div class="card-body p-4">
    <p><%= reply.comment%></p>
    <% if reply.user == current_user %>
      <%= link_to post_reply_path(@post, reply), method: :delete, data: { confirm: "Are you sure?" } do %>
        <h3 class="text-danger float-right p-1"><%= fas_icon 'fas fa-trash-alt' %></h3>
      <% end %>
      <%= link_to edit_post_reply_path(@post, reply),remote: true do %>
        <h3 class="text-dark float-right  p-1"><%= fas_icon 'fas fa-edit' %></h3>
      <% end %>
    <% end %>
  </div>
</div>
