<div class="container">
  <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.text_area :introduction,size: "30x10", class: "form-control" %>
    </div>
    <div class="form-group">  
      <%= image_tag @user.avatar, width: "200px" if @user.avatar? %>
      <%= f.file_field :avatar %>
    </div>
      <%= f.submit "Submit", class: "btn btn-outline-success" %>
  <% end %>
</div>