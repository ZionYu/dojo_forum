<div class="container">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Replies count</th>
        <th scope="col">Title</th>
        <th scope="col">Last replied at</th>
        <th scope="col">Viewed count</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>  
        <tr>
          <td><%= post.replies_count %></td>
          <td><%= post.title %></td>
          <td><%= post.last_replied_at %></td>
          <td><%= post.viewed_count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

