<div class="container">
  <div class="row">
    <div class="container-fluid">
        <%= link_to 'Category List', admin_categories_path, class: "btn btn-default" %>|
        <%= link_to 'User List', admin_users_path, class: "btn btn-default" %>
    </div>
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Authorization</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
            <%= form_tag admin_user_path(user), method: :patch do %>
              <%= select_tag(:role, options_for_select([['Public'], ['Admin']],user.role),class:"custom-select ") %>
              <%= submit_tag "Update",class: "btn btn-danger" %>
            <% end %> 
            </td>
          </tr>
        <% end %> 
        
      </tbody>
    </table>
  </div>
</div>