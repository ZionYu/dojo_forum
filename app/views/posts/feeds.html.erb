<div class="jumbotron jumbotron-fluid">
  <div class="d-flex justify-content-center">
    <div class="text-center">
      <h4>User</h4>
      <div class="card m-3" style="width: 18rem;">
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= @users_count %></li>
        </ul>
      </div>
    </div>
    <div class="text-center">
      <h4>Post</h4>
      <div class="card m-3" style="width: 18rem;">
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= @posts_count %></li>
        </ul>
      </div>
    </div>
    <div class="text-center">
      <h4>Comment</h4>
      <div class="card m-3" style="width: 18rem;">
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= @replies_count %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row text-center">
    <div class="col">
      <h2>ChatterBox</h2><hr>
        <table class="table table-borderless">
          <tbody>
            <% i = 1 %>
            <% @users.each do|user| %>
            <tr>
              <th scope="row"><%= i.to_s+'.' %></th>
              <td><%= user.name %></td> 
              <td><%= user.replies_count %></td>
            </tr>
            <% i +=1 %>
            <% end %>
          </tbody>
        </table>
    </div>
    <div class="col">
      <h2>Most Popular Post</h2><hr>
      <table class="table table-borderless">
        <tbody>
          <% i = 1 %>
          <% @posts.each do|post| %>
          <tr>
            <th scope="row"><%= i.to_s+'.' %></th>
            <td><%= post.title %></td> 
            <td><%= post.replies_count %></td>
          </tr>
          <% i +=1 %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>